
[DEFAULT]
compute_driver=libvirt.LibvirtDriver

[libvirt]
{%- if grains.get("virtual") != "physical" %}
virt_type = qemu
{%- else %}
virt_type = kvm
{%- endif %}

{% if pillar.get("ceph", {}).get("enabled") %}
images_type=rbd
images_rbd_pool=openstack
images_rbd_ceph_conf=/etc/ceph/ceph.conf
rbd_user=admin
rbd_secret_uuid=ThisKeyHasToBeChanged
{%- endif %}

